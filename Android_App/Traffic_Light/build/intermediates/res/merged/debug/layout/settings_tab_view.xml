<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_weight="0.02" />

    <TextView
        android:text="license plate car"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.02"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:textSize="18sp"
        android:id="@+id/txt_static_license_plate_car" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editTxtLicensePlateCar"
        android:layout_weight="0.02"
        android:textAlignment="center"
        android:textStyle="normal|bold" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="0.02" />

    <TextView
        android:text="REST Server"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.02"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:textSize="18sp"
        android:id="@+id/txt_static_rest_server" />

    <TextView
        android:text="IPv4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_static_server_ip"
        android:layout_weight="0.02"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:textSize="18sp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/editTxtIP"
        android:layout_weight="0.02"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="18sp" />

    <TextView
        android:text="port"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_static_server_port"
        android:layout_weight="0.02"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:textSize="18sp"
        android:fontFamily="sans-serif" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/editTxtPort"
        android:layout_weight="0.02"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="18sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="0.02" />

    <Button
        android:text="Apply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnSettingsApply"
        android:layout_weight="0.02"
        android:textAlignment="center"
        android:textStyle="normal|bold" />

    <Button
        android:text="Shutdown Traffic Light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnShutdown"
        android:layout_weight="0.02" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="0.02" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_ErrorMsg"
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_marginBottom="35dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_weight="0.02"
        android:textColor="@color/colorAccent" />

</LinearLayout>