<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.04">

        <TextView
            android:text="Request green traffic light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView99"
            android:layout_weight="0.04"
            android:textStyle="normal|bold"
            android:textAlignment="center"
            android:layout_marginTop="17dp" />

        <ImageButton
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:id="@+id/btnEmergency"
            android:layout_weight="0.04"
            android:scaleType="fitCenter"
            android:visibility="visible"
            android:elevation="0dp"
            android:background="@drawable/pedestrian_green_btn"
            android:layout_marginTop="35dp"
            android:layout_below="@+id/textView99"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView98"
            android:text="Request green traffic light for an extended time"
            android:textStyle="normal|bold"
            android:textAlignment="center"
            android:layout_below="@+id/btnEmergency"
            android:layout_alignParentStart="true"
            android:layout_marginTop="17dp" />

        <ImageButton
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:id="@+id/btnRequestGreenLong"
            android:visibility="visible"
            android:background="@drawable/pedestrian_green_long_btn"
            android:scaleType="fitCenter"
            android:layout_below="@+id/textView98"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="0.02"
            android:layout_below="@+id/btnRequestGreenLong"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="35dp"
            android:id="@+id/txtView_ErrorMsg"
            android:textSize="18sp"
            android:textAlignment="center"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:textColor="@color/colorAccent" />

    </RelativeLayout>

</LinearLayout>